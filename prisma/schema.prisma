generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELLER ---

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role      @default(BUYER)
  company   String?
  taxNo     String?
  address   String?
  phone     String?
  isApproved Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[] @relation("SellerProducts")
  orders    Order[]   // İlişki adı kaldırıldı, basitleştirildi
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  price       Float
  stock       Int
  image       String?
  categoryId  Int
  sellerId    Int
  public      Boolean  @default(true)
  category    Category @relation(fields: [categoryId], references: [id])
  seller      User     @relation("SellerProducts", fields: [sellerId], references: [id])
}

// Tek ve Doğru Sipariş Modeli
model Order {
  id        Int      @id @default(autoincrement())
  
  // İlişki Ayarları (User ID INT olduğu için burası da Int olmalı)
  userId    Int      
  user      User     @relation(fields: [userId], references: [id])
  
  items     Json     // Sepet ürünleri burada saklanacak
  total     Float
  status    String   @default("Hazırlanıyor")
  createdAt DateTime @default(now())

  // Supabase'in "public.siparisler" hatasını çözen satır:
  @@map("siparisler")
}